<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonAzzera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonGioca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gioca" />

    <TextView
        android:id="@+id/textPunteggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punteggio: 0"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:stretchColumns="*"
        android:layout_marginTop="16dp">

        <!-- Prima riga -->
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/cell_00" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_01" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_02" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_03" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
        </TableRow>

        <!-- Seconda riga con testo in grassetto -->
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/cell_10" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:textStyle="bold" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_11" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:textStyle="bold" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_12" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:textStyle="bold" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_13" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:textStyle="bold" android:layout_margin="1dp"/>
        </TableRow>

        <!-- Terza riga -->
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/cell_20" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_21" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_22" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
            <TextView android:id="@+id/cell_23" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center"
                android:background="#FFFFFF" android:textColor="#000000" android:layout_margin="1dp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>

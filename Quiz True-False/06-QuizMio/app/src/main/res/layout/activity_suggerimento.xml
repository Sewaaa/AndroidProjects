<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sugg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuggerimentoActivity">

    <TextView
        android:id="@+id/numeroQuesito"
        android:layout_centerHorizontal="true"

        android:textSize="@dimen/textsize_big"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quesito n.#"
        />

    <TextView
        android:id="@+id/quesito"
        android:layout_above="@id/suggerimento"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textsize_big"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# QUESTIO #"
        />
    <TextView
        android:id="@+id/suggerimento"
        android:layout_above="@id/LinearBottoni"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textsize_big"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggerimento: #####"
        />
<LinearLayout
    android:id="@+id/LinearBottoni"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerInParent="true">
    <Button
        android:id="@+id/confermaSuggerimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_basic"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Voglio vedere il suggerimento"

        android:onClick="confermaSuggerimento"
        />
</LinearLayout>
    <Button
        android:id="@+id/indietro"
        android:layout_below="@id/LinearBottoni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_basic"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Indietro"

        android:onClick="tornaIndietro"
        />
</RelativeLayout>